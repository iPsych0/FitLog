<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectMuscleGroup">

    <Button
        android:id="@+id/returnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="149dp"
        android:layout_marginStart="147dp"
        android:layout_marginTop="4dp"
        android:background="@color/colorAccent"
        android:text="Return"
        android:onClick="goBack"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="55dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:text="Select a muscle group to see your workouts"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="368dp"
        android:layout_height="400dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/backButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorAccent"
                android:layout_gravity="center"
                android:onClick="startWorkoutOverview"
                android:text="Back"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/chestButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorAccent"
                android:layout_gravity="center"
                android:onClick="startWorkoutOverview"
                android:text="Chest"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/legsButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:onClick="startWorkoutOverview"
                android:background="@color/colorAccent"
                android:text="Legs"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/bicepsButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:onClick="startWorkoutOverview"
                android:background="@color/colorAccent"
                android:text="Biceps"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/tricepsButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:onClick="startWorkoutOverview"
                android:background="@color/colorAccent"
                android:text="Triceps"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/shouldersButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:onClick="startWorkoutOverview"
                android:background="@color/colorAccent"
                android:text="Shoulders"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/absButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:onClick="startWorkoutOverview"
                android:background="@color/colorAccent"
                android:text="Abs"
                android:textColor="@android:color/background_light" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>