<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.daniel.fitlog">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/deadliftlogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.HomeScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.AddExercisesScreen" android:parentActivityName=".views.HomeScreen" />
        <activity android:name=".views.HighestWeightHistoryScreen" android:parentActivityName=".views.SelectionScreen" />
        <activity android:name=".views.HighestWeightGraphScreen" android:parentActivityName=".views.HighestWeightHistoryScreen"/>
        <activity android:name=".views.SelectionScreen" android:parentActivityName=".views.HomeScreen"/>
        <activity android:name=".views.WorkoutOverviewScreen" android:parentActivityName=".views.SelectionScreen" />
        <activity android:name=".views.WorkoutHistoryScreen" android:parentActivityName=".views.WorkoutOverviewScreen"/>
        <activity android:name=".views.EditWorkoutScreen" android:parentActivityName=".views.WorkoutHistoryScreen"/>
        <activity android:name=".views.OneRepMaxScreen" android:parentActivityName=".views.HomeScreen"/>
    </application>

</manifest>